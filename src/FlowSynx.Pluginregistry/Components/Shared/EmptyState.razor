<div class="card border-0 shadow-sm text-center py-5">
    <div class="card-body">
        <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="currentColor" class="bi @IconClass text-muted mb-4 opacity-50" viewBox="0 0 16 16">
            @if (IconClass == "bi-inbox")
            {
                <path d="M4.98 4a.5.5 0 0 0-.39.188L1.54 8H6a.5.5 0 0 1 .5.5 1.5 1.5 0 1 0 3 0A.5.5 0 0 1 10 8h4.46l-3.05-3.812A.5.5 0 0 0 11.02 4zm9.954 5H10.45a2.5 2.5 0 0 1-4.9 0H1.066l.32 2.562a.5.5 0 0 0 .497.438h12.234a.5.5 0 0 0 .496-.438zM3.809 3.563A1.5 1.5 0 0 1 4.981 3h6.038a1.5 1.5 0 0 1 1.172.563l3.7 4.625a.5.5 0 0 1 .105.374l-.39 3.124A1.5 1.5 0 0 1 14.117 13H1.883a1.5 1.5 0 0 1-1.489-1.314l-.39-3.124a.5.5 0 0 1 .106-.374z"/>
            }
            else
            {
                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
            }
        </svg>
        <h3 class="mb-3 fw-bold">@Title</h3>
        <p class="text-muted mb-4 fs-5">@((MarkupString)Message)</p>
        <a href="@ResetUrl" class="btn btn-outline-primary">
            <i class="bi @(IconClass == "bi-inbox" ? "bi-grid-3x3-gap" : "bi-arrow-clockwise") me-2"></i>@ResetButtonText
        </a>
    </div>
</div>

@code {
    [Parameter]
    public string Title { get; set; } = "No Results Found";

    [Parameter]
    public string Message { get; set; } = string.Empty;

    [Parameter]
    public string ResetUrl { get; set; } = "/";

    [Parameter]
    public string ResetButtonText { get; set; } = "Clear Search";

    [Parameter]
    public string IconClass { get; set; } = "bi-search";
}