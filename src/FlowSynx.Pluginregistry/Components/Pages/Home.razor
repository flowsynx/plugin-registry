@page "/"

@using System.Security.Claims
@inject NavigationManager Navigation
@inject IHttpContextAccessor HttpContextAccessor

<PageTitle>FlowSynx Plugin Registry | Home</PageTitle>

<header class="bg-dark py-1">
    <div class="container px-5">
        <div class="row gx-5 align-items-center justify-content-center">
            <div class="col-lg-12 col-xl-12 col-xxl-12">
                <div class="my-5 text-center text-xl-start">
                    <h1 class="display-5 fw-bolder text-white mb-2">Official FlowSynx plugin registry</h1>
                    <p class="lead fw-normal text-white-50 mb-4">Discover, Extend, Automate — Power Up Your FlowSynx Workflows With Seamless Plugin Integration</p>
                </div>
            </div>
        </div>
    </div>
</header>
<section class="py-5" id="whatisFlowsynxPluginregistry">
    <div class="container px-5">
        <div class="row gx-5">
            <div class="col-lg-12 mb-5 mb-lg-0">
                <h2>What is FlowSynx plugin registry</h2>
                FlowSynx Plugin registry is the official registry and distribution center for plugins that supercharge your
                FlowSynx automation workflows. Whether you're adding task processors, custom connectors,
                logic modules, or data transformation tools, the Plugin regsitry gives developers and teams a centralized,
                secure, and version-controlled ecosystem to publish, discover, and manage FlowSynx-compatible plugins.
                FlowSynx Plugin registry ensures reliable, scalable, and flexible extension of your automation environment
                — from proof-of-concept to enterprise-scale deployments.
            </div>
        </div>
    </div>
</section>